<%= form_for(@article) do |f| %>
    <ul>
        <% @article.errors.full_messages.each do |error| %>
          <%= error %>
        <% end %>
    </ul>

    <p>
        <%= f.label :header, "Title" %>
        <%= f.text_field :header %>
    </p>

    <p>
        <%= f.label :article %> <br/>
        <%= f.text_area :article %>
    </p>

    <p>
        <%= f.label :tag_list %><br/>
        <%= f.text_field :tag_list %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>


