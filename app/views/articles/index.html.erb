<h1>Blog Posts</h1>

<% if logged_in? %>
    <%= link_to "Create a new article", new_article_path, class: 'new_article' %>
<% end %>

<ul id="articles">
  <% @articles.each do |article| %>
    <li> <%= link_to article.header, article_path(article), class: 'article_title' %> </li>
  <% end %>
</ul>



